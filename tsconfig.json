{
  "compilerOptions": {
    "target": "ES2022", // Oder eine andere moderne Version, z.B. "ES2020"
    "module": "CommonJS",
    "outDir": "./dist", // Hier werden die kompilierten JS-Dateien gespeichert
    "rootDir": "./src", // Hier liegen deine TypeScript-Quelldateien
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Stelle sicher, dass der Compiler deine src-Dateien findet
  "exclude": ["node_modules"]
}
